%h1="Bar #{@bar.name}"
%table.table
  %thead
    %tr
      %th Locatie
      %th Populariteit
      %th Stad percentage populariteit
      %th Capaciteit
      %th Dagelijkse bezoekers
  %tbody
    %tr
      %td=@bar.city.name
      %td=@bar.popularity
      %td=@bar.city_popularity
      %td=@bar.capacity
      %td="#{@bar.daily_visitors} potentieel: #{@bar.potential_visitors.round(0)}"
%hr
%h2 Features:
%table.table
  %thead
    %tr
      %th Feature
      %th Actief
  %tbody
    - @bar.bar_features.each do |bar_feature|
      %tr
        %td=bar_feature.feature.name
        %td
          - if bar_feature.active
            Ja
          - else 
            Nee
.lead
  = link_to "Features toevoegen?", bar_features_path(@bar), :class => "btn btn-success"

%h2 Expansions:
%table.table
  %thead
    %tr
      %th Expansion
  %tbody
    - @bar.expansions.each do |expansion|
      %tr
        %td=expansion.name
.lead
  = link_to "Expansions toevoegen?", bar_expansions_path(@bar), :class => "btn btn-success"

%h2 Uitbreideingen:
%table.table
  %thead
    %tr
      %th Uitbreiding
  %tbody
    - @bar.enlargements.each do |enlargement|
      %tr
        %td=enlargement.name
.lead
  = link_to "Uitbreiding toevoegen?", bar_enlargements_path(@bar), :class => "btn btn-success"